#/bin/bash
platform=$(uname -o)
EXT=
ASM=
if [ "$platform" == "Darwin" ]; then
    EXT=.macos
    ASM=-A../../include/sjasmplus.macos
fi

micro80/convert_png_to_micro80/convert_png_to_micro80$EXT micro80

../../c8080$EXT $ASM -ORKS -DARCH_MICRO80_COLOR -Imicro80 -olines.micro80.rk \
 lines.c \
 music.c \
 path.c \
 micro80/resources.c

if [ -e  /home/alemorf/a/work/micro80_emulator ]
then
    cp lines.micro80.rk /home/alemorf/a/work/micro80_emulator/test.rk
    cd /home/alemorf/a/work/micro80_emulator && make
fi

